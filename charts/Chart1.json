{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Infant Mortality Rate Across Indian States (2022)",
    "subtitle": [
      "Deaths per 1,000 live births",
      "Source: Census of India SRS Bulletin (2022)"
    ],
    "fontSize": 16,
    "subtitleFontSize": 12,
    "subtitleFontStyle": "italic",
    "subtitleColor": ["gray", "#555555"],
    "offset": 20
  },
  "width": 700,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/nethranatarajan3/nethranatarajan3.github.io/refs/heads/main/data/Admin_Boundary.json",
    "format": {"type": "json", "property": "features"}
  },
  "transform": [
    {
      "lookup": "properties.State_Name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/nethranatarajan3/nethranatarajan3.github.io/refs/heads/main/data/IMR_India_SRS_2022_BarArea.csv"
        },
        "key": "area",
        "fields": ["IMR"]
      }
    }
  ],
  "projection": {"type": "identity", "reflectY": true},
  "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 1},
  "encoding": {
    "color": {
      "field": "IMR",
      "type": "quantitative",
      "scale": {"scheme": "redyellowgreen", "reverse": true, "domain": [5, 45]},
      "legend": {"title": "IMR (per 1,000 births)", "orient": "bottom-right"}
    },
    "tooltip": [
      {"field": "properties.State_Name", "type": "nominal", "title": "State"},
      {
        "field": "IMR",
        "type": "quantitative",
        "title": "Infant Mortality Rate",
        "format": ".1f"
      }
    ]
  },
  "config": {}
}